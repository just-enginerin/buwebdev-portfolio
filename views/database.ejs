<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;600&family=Unica+One&display=swap" rel="stylesheet">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="/styles/site.css">
    <link rel="stylesheet" href="/styles/projects.css">
</head>
<body>

    <!-- Navigation Bar -->
    <%- include('./partials/_header.ejs') %>

    <h2>WEB 335: Introduction to NoSQL - Database Diagrams</h2>

    <!-- API Unit Tests Page Main Content -->
    <main id="databases" class="grid-container">
        
    </main>

    <!-- Footer -->
    <%- include('./partials/_footer.ejs') %>

    <script>
        let gridString = ""

        // Add 9 placeholders to the Databases grid.
        for(let i = 1; i < 10; i++) {
            let placeholder = `<img src="https://via.placeholder.com/300x200/cccccc/000000.jpeg?text=WEB+335:+Intro+to+NoSQL+-+Database+Diagram+${i}">`
            gridString += placeholder
        }

        document.getElementById("databases").innerHTML = gridString
    </script>
</body>
</html>
